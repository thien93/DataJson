
@model DataJson.Models.CustomerViewModel

@{ Layout = ""; }



<!DOCTYPE html>
<html lang="en">
<head>


    <style>
        .m_tr {
            border: 1px solid #000;
            padding: 2px;
        }

        table {
            border-collapse: collapse;
        }

        .status_101 {
            background-color: green;
        }

        .status_111 {
            background-color: red;
        }

        .status_121 {
            background-color: blue;
        }

        .status_131 {
            background-color: yellow;
        }

        .status_141 {
            background-color: #32a889;
        }

        .status_151 {
            background-color: orange;
        }

        .status_161 {
            background-color: #32a852
        }

        .status_171 {
            background-color: #a8a832
        }

        .status_181 {
            background-color: #a86932
        }

        .status_191 {
            background-color: #ff1fc4
        }

        .status_201 {
            background-color: #76bbe3
        }

        .status_ {
            border: none !important
        }
    </style>

</head>
<body>
    <div style="align-content:center;text-align:center;margin-bottom:20px;font-weight:bold">
        @Model.Name
    </div>
    <div style="white-space: nowrap">
        <div style="display: inline-block;float:left;margin-right:50px">

            <table style="font-size:12px;" class="m_tr">
                <thead>
                    <tr style="background-color:aqua">
                        <th class="m_tr"></th>
                        @for (int i = Model.MinLocation; i <= Model.MaxLocation; i++)
                        {
                            <th class="m_tr">
                                @i
                            </th>
                        }

                    </tr>

                </thead>
                <tbody>
                    @for (int i = 0; i < Model.dataTables.Count; i++)
                    {
                        <tr>
                            <td class="m_tr" style="background-color:aqua">F@(Model.dataTables.Count-i-1)</td>
                            @for (int j = 0; j < Model.dataTables[i].dataHouses.Count; j++)
                            {
                                if (!Model.dataTables[i].dataHouses[j].IsMer)
                                {
                                    <td class="m_tr @Model.dataTables[i].dataHouses[j].Status" rowspan="@Model.dataTables[i].dataHouses[j].MarFloor">@Model.dataTables[i].dataHouses[j].Detail</td>

                                }
                            }
                        </tr>
                    }
                </tbody>


            </table>
        </div>
        <div style="display: inline-block;margin-right:20px">
            <table style="font-size:12px">
                <thead>
                    <tr>
                        <th class="m_tr">Trạng thái</th>
                        <th class="m_tr">Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.statusDatas.Count; i++)
                    {

                        <tr>
                            <th class="m_tr @Model.statusDatas[i].nameClass">@Model.statusDatas[i].Name</th>
                            <th class="m_tr">@Model.statusDatas[i].Value</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
